{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "jsx-no-lambda": false,
    "jsx-boolean-value" : ["never"],
    "member-access": [true],
    "no-console": [true, "log"]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.json",
      "node_modules/**/*.ts"
    ]
  }
}
